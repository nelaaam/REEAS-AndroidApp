<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/about_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".About">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headingColor"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:fontFamily="@font/avenirnextltpro_bold"
                android:text="@string/title_activity_about"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="earthquakealert_logo"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="@string/content_about" />

        <Button
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_textlines"
            android:gravity="start"
            android:onClick="showAboutContent"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="@string/content_title_version" />
        <LinearLayout
            android:id="@+id/version_information_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_version_number"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/avenirnextltpro_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_feature_1"
                android:layout_marginLeft="25dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_feature_2"
                android:layout_marginLeft="25dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_feature_3"
                android:layout_marginLeft="25dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_feature_4"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_feature_5"
                android:layout_marginLeft="25dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_textlines"
            android:gravity="start"
            android:onClick="showAboutContent"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Contact Us" />
        <LinearLayout
            android:id="@+id/contact_us_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_title_contact_1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/avenirnextltpro_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_contact_1"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_textlines"
            android:gravity="start"
            android:onClick="showAboutContent"
            android:padding="16dp"
            android:textSize="16sp"
            android:text="Support Our Research" />

        <LinearLayout
            android:id="@+id/support_us_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_coming_soon"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:fontFamily="@font/avenirnextltpro_bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>