<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/about_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".About">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="earthquakealert_logo"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/content_about" />

        <Button
            android:id="@+id/btn_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_textlines"
            android:gravity="start"
            android:onClick="showAboutContent"
            android:padding="16dp"
            android:text="Version 6.2 Information" />
        <TextView
            android:id="@+id/content_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_appVersion"
            android:visibility="gone"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_textlines"
            android:gravity="start"
            android:onClick="showAboutContent"
            android:padding="16dp"
            android:text="Contact Us" />
        <TextView
            android:id="@+id/content_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_appVersion"
            android:visibility="gone"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btn_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_textlines"
            android:gravity="start"
            android:onClick="showAboutContent"
            android:padding="16dp"
            android:text="Support Our Research" />
        <TextView
            android:id="@+id/content_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_appVersion"
            android:visibility="gone"
            android:layout_margin="20dp"/>



    </LinearLayout>
</ScrollView>