<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/colorCard"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".70"
            android:orientation="vertical"
            android:gravity="left"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/timeStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:textSize="14sp"
                android:fontFamily="@font/avenirnextltpro_bold" />

            <TextView
                android:id="@+id/dateStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="5dp">
                <TextView
                    android:id="@+id/latitudeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/longitudeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2.5dp"
                    android:paddingBottom="2.5dp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/locationStamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2.5dp"
                android:paddingBottom="2.5dp"
                android:layout_marginVertical="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/card_magnitude_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".30"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/layout_intensityindicator_background"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/card_magnitude_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_view_magnitude"
                android:textAlignment="center"
                android:textColor="@color/colorHeader"
                android:textSize="50sp"
                android:fontFamily="@font/avenirnextltpro_bold" />

            <TextView
                android:id="@+id/magnitudeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorHeader"
                android:textSize="30sp"
                android:fontFamily="@font/avenirnextltpro_bold" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>